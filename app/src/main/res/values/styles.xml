<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#F57C00</item>
        <item name="colorAccent">#FF6D00</item>
    </style>

    <style name="Launcher_Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#F57C00</item>
        <item name="colorAccent">#FF6D00</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>





    <style name="App_Texts" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorControlNormal">#EEEEEE</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:textColorHint">#EEEEEE</item>
        <item name="colorButtonNormal">#FF9800</item>
        <item name="android:colorButtonNormal">#F57C00</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Sign_Btn" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/pressedOrange</item>
        <item name="colorButtonNormal">@color/primaryOrange</item>
    </style>

    <style name="MyButton2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/pressedGreen</item>
        <item name="colorButtonNormal">@color/primaryGreen</item>
    </style>




</resources>
