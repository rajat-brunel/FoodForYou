<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="brunel.group12.foodfilterapp.settings"
    tools:background="#FFA500"
    android:background="#FFA500">

    <TextView
        android:text="Settings"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="My Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="12dp"
        android:typeface="sans" />

    <Button
        android:text="GPS Permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_gps_settings"
        android:theme="@style/MyButton"
        android:textSize="12sp"
        android:layout_below="@+id/Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/chg_pass"
        android:layout_alignEnd="@+id/chg_pass"
        android:textColor="#FFFFFF" />

    <Button
        android:text="Clear Favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ClearFavourites"
        android:textSize="12sp"
        android:layout_below="@+id/button_gps_settings"
        android:theme="@style/MyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_gps_settings"
        android:layout_alignEnd="@+id/button_gps_settings"
        android:textColor="#FFFFFF" />

    <Button
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chg_pass"
        android:textSize="12sp"
        android:layout_below="@+id/textView5"
        android:theme="@style/MyButton"
        android:layout_alignRight="@+id/Username"
        android:layout_alignEnd="@+id/Username"
        android:layout_marginTop="27dp"
        android:textColor="#FFFFFF" />

    <Button
        android:text="Change Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Username"
        android:textSize="12sp"
        android:layout_below="@+id/chg_pass"
        android:theme="@style/MyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <Button
        android:text="Edit Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_photo"
        android:textSize="10sp"
        android:onClick="onClick"
        android:layout_alignBaseline="@+id/ClearFavourites"
        android:layout_alignBottom="@+id/ClearFavourites"
        android:theme="@style/MyButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brunel_logo_v2"
        android:id="@+id/imageView"
        android:layout_above="@+id/ClearFavourites"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button_gps_settings"
        android:layout_toEndOf="@+id/button_gps_settings" />

</RelativeLayout>
