<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFA500"
    tools:context="brunel.group12.foodfilterapp.help"
    android:weightSum="1">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>



    <ImageView
     android:layout_width="262dp"
     android:layout_height="92dp"
     android:layout_gravity="center"
     android:id="@+id/logo_plc"
        android:src="@drawable/ffy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text= "FoodForYou"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="How can we help you?"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:weightSum="1">



    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="FAQ"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textAlignment="center"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: How do I create an account?"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: On the application there is an option called 'Create an account' Simply click this button and fill in your details."
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: Why create an account?"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A:Save your details for faster, save your favourite restaurants, go to restaurants according to location/cost/reviews "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: How do I find a particular dish or menu item? "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: Enter your postcode and the list of restaurants around you, from which you can click your desired cuisine "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: How can I change my password? "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: Go onto the application, then go onto settings page, where there is an option to change your password. "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: How much does it cost? "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: Its free "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: What is food for you?  "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: Food for you allows you to filter restaurants according to location, cost and reviews. "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: Do I need to have an account to use the application? "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: No, you can use the application as a guest. "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="Q: How often can I write a review? "
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/help_mid"
        android:text="A: Whenever you want"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>
</LinearLayout>
</ScrollView>