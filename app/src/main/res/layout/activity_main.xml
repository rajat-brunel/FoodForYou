<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="brunel.group12.foodfilterapp.MainActivity"
    android:background="@drawable/background">

    <Button
        android:text="@string/sign_up"
        android:layout_width="wrap_content"
        android:textColor="@android:color/background_light"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up"
        android:theme="@style/MyButton"
        android:onClick="OnClick_sign"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/guest"
        android:layout_toStartOf="@+id/guest" />

    <Button
        android:text="@string/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/log_in"
        android:theme="@style/MyButton"
        android:onClick="OnClick_Login"
        android:layout_alignBaseline="@+id/sign_up"
        android:layout_alignBottom="@+id/sign_up"
        android:layout_toRightOf="@+id/guest"
        android:layout_toEndOf="@+id/guest" />

    <Button
        android:text="@string/continue_as_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/guest"
        android:theme="@style/MyButton"
        android:onClick="OnClick_Guest"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/sub_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/a_food_filtering_app"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_text"
        android:textColor="#fff3e0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ffy"
        android:id="@+id/ffy"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/guest"
        android:layout_centerHorizontal="true"
        android:textAlignment="viewEnd" />

</RelativeLayout>
