<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_post_code"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="brunel.group12.foodfilterapp.PostCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FB8C00"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/new_button"
            android:color="@android:color/transparent"
            android:background="@android:color/transparent"
            android:id="@+id/press_me_v2"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Touch to Filter"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/touch_to_filter"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or Enter PostCode"
            android:layout_marginTop="8dp"
            android:id="@+id/or_post"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="#FB8C00"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00000000"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            android:textColorHint="#00FFFFFF"
            android:textColor="#FB8C00"
            android:maxLength="8"
            android:inputType="textPostalAddress"
            android:id="@+id/text_post" />

        <android.support.v7.widget.AppCompatButton
            android:text="Filter Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/MyButton"
            android:id="@+id/btn_filter"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help_btn"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:color="@android:color/transparent"
            android:background="@android:color/transparent"
            android:src="@drawable/help"
            />

    </LinearLayout>

</LinearLayout>
